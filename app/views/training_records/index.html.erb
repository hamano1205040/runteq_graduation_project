<div class="w-full">
  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl text-gray-800">トレーニング記録</h1>
    <%= link_to "新規作成", new_training_record_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-medium shadow" %>
  </div>

  <% if @training_records.any? %>
    <div class="space-y-4">
      <% @training_records.each do |training_record| %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <div class="text-sm text-gray-500 mb-2">
                <%= training_record.trained_on.strftime('%Y年%m月%d日') %>
              </div>
              <div class="text-gray-800 whitespace-pre-wrap">
                <%= training_record.content %>
              </div>
            </div>
            <div class="flex space-x-2 ml-4">
              <%= link_to "編集", edit_training_record_path(training_record), class: "text-blue-600 hover:text-blue-800 px-3 py-1 rounded border border-blue-600 hover:bg-blue-50" %>
              <%= button_to "削除", training_record, method: :delete, class: "text-red-600 hover:text-red-800 px-3 py-1 rounded border border-red-600 hover:bg-red-50", data: { turbo_confirm: "本当に削除しますか？" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <p class="text-gray-500 mb-4">まだトレーニング記録がありません</p>
      <%= link_to "最初の記録を作成する", new_training_record_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  <% end %>
</div>
